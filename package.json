		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.1",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.45.2",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
